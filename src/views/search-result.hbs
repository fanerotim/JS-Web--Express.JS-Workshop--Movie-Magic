<main>
        <section id="search">
                <h1>Search</h1>
                <form action="/search-result" method="GET" class="form">
                    <input type="text" class="search" name="title" placeholder="Title...">
                    <input type="text" name="genre" class="genre" placeholder="Genre...">
                    <input type="number" name="year" class="year" placeholder="Year...">
                    <input type="submit" value="search">
                </form>
            </section>

            <section id="catalog">
                <div class="band">

                    {{#each result}}
                    <div class="flip flip-vertical">
                        <div class="front">
                            <img src="{{imageUrl}}"
                                alt="Jungle-Couise">
                        </div>
                        <div class="back">
                            <h1>{{title}}</h1>
                            <h2>Genre: {{genre}}</h2>
                            <p>Description: {{description}}
                            </p>
                            <a href="#" class="details">Details</a>
                        </div>
                    </div>

                    {{else}}
                    <div class="no-posts">
                        <p class="no-offer">There are no movies matched...</p>
                    </div>
                    {{/each}}
                </div>
            </section>

        </main>